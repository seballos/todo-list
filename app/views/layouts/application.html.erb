<!DOCTYPE html>
<html>
<head>
  <title>TodoApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="nav">
  <h1> <%= link_to 'Application', root_path %></h1>
  <ul>
    <li><%= link_to 'Todo List', todo_lists_path %> </li>
  </ul>
  <br class="clear" />
  </div>

<% flash.each do |t, m| %>
  <div class="alert flash <%= t %>">
    <%= m %>
  </div>
  <% end %>


<%= yield %>

</body>
</html>
